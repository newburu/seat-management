<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <div class="md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        <%= @event.name %>
      </h2>
    </div>
  </div>

  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Participant List (Left/Center) -->
    <div class="lg:col-span-2">
      <h3 class="text-lg font-medium leading-6 text-gray-900">参加者一覧</h3>
      <div class="mt-4 flex flex-col">
        <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
            <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
              <table class="min-w-full divide-y divide-gray-300">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">名前</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">属性</th>
                    <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                      <span class="sr-only">削除</span>
                    </th>
                  </tr>
                </thead>
                <tbody id="participants_list" class="divide-y divide-gray-200 bg-white">
                  <%= render partial: "participants/participant", collection: @participants %>
                  <% if @participants.empty? %>
                    <tr id="no_participants_message">
                      <td colspan="3" class="px-3 py-4 text-sm text-gray-500 text-center">
                        参加者がまだいません。
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Registration Form (Right column) -->
    <div class="lg:col-span-1 space-y-8">
      <div>
        <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">参加者を追加</h3>
        <%= turbo_frame_tag "new_participant_frame" do %>
          <%= render "participants/form", event: @event, participant: @event.participants.build %>
        <% end %>
      </div>

      <div class="border-t pt-8">
        <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">AIグルーピング</h3>
        <p class="text-sm text-gray-500 mb-4">
          AIに参加者の属性に基づいた最適なグループ分けを依頼します。
        </p>
        
        <%= form_with url: event_groupings_path(@event), method: :post, class: "space-y-4", data: { turbo: true, controller: "ui--loading", action: "turbo:submit-start->ui--loading#submitStart turbo:submit-end->ui--loading#submitEnd" } do |f| %>
          <div>
            <%= f.label :seats_per_group, "1グループあたりの人数 (任意)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :seats_per_group, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm", placeholder: "自動" %>
          </div>

          <%= f.button class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200", data: { ui__loading_target: "button" } do %>
            <span data-ui--loading-target="text">AIグルーピングを実行</span>
            <span data-ui--loading-target="loading" class="hidden flex items-center">
              <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              実行中...
            </span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mt-12">
    <h3 class="text-xl font-bold text-gray-900 mb-6">グルーピング結果</h3>
    <%= turbo_frame_tag "grouping_result" do %>
      <% if @event.groupings.exists? %>
        <%= render @event.groupings.last %>
      <% else %>
        <p class="text-gray-500 text-center py-10 bg-gray-50 rounded-lg border-2 border-dashed border-gray-300">
          グルーピング結果はまだありません。
        </p>
      <% end %>
    <% end %>
  </div>
</div>
