<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <div class="md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        <%= @event.name %>
      </h2>
    </div>
  </div>

  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Participant List (Left/Center) -->
    <div class="lg:col-span-2">
      <h3 class="text-lg font-medium leading-6 text-gray-900">Participants</h3>
      <div class="mt-4 flex flex-col">
        <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
            <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
              <table class="min-w-full divide-y divide-gray-300">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Properties</th>
                    <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                      <span class="sr-only">Delete</span>
                    </th>
                  </tr>
                </thead>
                <tbody id="participants_list" class="divide-y divide-gray-200 bg-white">
                  <%= render partial: "participants/participant", collection: @participants %>
                  <% if @participants.empty? %>
                    <tr id="no_participants_message">
                      <td colspan="3" class="px-3 py-4 text-sm text-gray-500 text-center">
                        No participants yet.
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Registration Form (Right column) -->
    <div class="lg:col-span-1">
      <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Add Participant</h3>
      <%= turbo_frame_tag "new_participant" do %>
        <%= render "participants/form", event: @event, participant: @event.participants.build %>
      <% end %>
    </div>
  </div>
</div>
