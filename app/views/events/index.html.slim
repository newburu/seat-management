p style="color: green" = notice

h1 Events

#events
  table.table.table-striped.table-hover
    thead.table-primary
      tr
        td
          = Event.human_attribute_name :name
        td
          = Event.human_attribute_name :start_time
        td
          = Event.human_attribute_name :place
        td
    tbody
      - @events.each do |event|
        tr
          td
            = event.name
          td
            = event.start_time
          td
            = event.place
          td
            = link_to "Show", event

= link_to "New event", new_event_path
