<div class="max-w-2xl mx-auto py-8">
  <h1 class="text-2xl font-bold mb-6">新しいイベントを作成</h1>

  <%= form_with(model: @event, local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
    <% if @event.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
        <h2 class="text-red-700 font-bold mb-2"><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
        <ul class="list-disc list-inside text-red-600">
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-6">
      <%= form.label :name, "イベント名", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "例: 2024年 新年会" %>
    </div>

    <div class="mb-6">
      <%= form.label :group_size, "1グループの人数（目安）", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.number_field :group_size, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", value: 4 %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "作成する", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to "キャンセル", events_path, class: "inline-block align-baseline font-bold text-sm text-gray-500 hover:text-gray-800" %>
    </div>
  <% end %>
</div>
