<tr id="<%= dom_id(participant) %>" class="group hover:bg-gray-50">
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
    <%= participant.name %>
  </td>
  <td class="px-3 py-4 text-sm text-gray-500">
    <% if participant.properties.present? %>
      <div class="flex flex-wrap gap-2">
        <% participant.properties.each do |key, value| %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <%= key %>: <%= value %>
          </span>
        <% end %>
      </div>
    <% end %>
  </td>
  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6 space-x-2">
    <%= link_to "編集", edit_event_participant_path(participant.event, participant), class: "text-indigo-600 hover:text-indigo-900", data: { turbo_frame: "modal" } %>
    <%= button_to "削除", event_participant_path(participant.event, participant), method: :delete, class: "inline-block text-red-600 hover:text-red-900 bg-transparent border-0 cursor-pointer p-0", form: { class: "inline-block", data: { turbo_confirm: "本当に削除しますか？" } } %>
  </td>
</tr>
